    <!-- <appwidget-provider
        xmlns:android="http://schemas.android.com/apk/res/android"
        指定桌面组件的基本信息
        android:minWidth="150dip" 桌面控件的最小宽度 
        android:minHeight="70dip" 桌面控件的最小高度
        android:updatePeriodMillis="1000" 更新的频率
        android:initialLayout="@layout/main"/>  初始化时显示的布局	-->
    <appwidget-provider
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:minWidth="150dip"
        android:minHeight="70dip"
        android:updatePeriodMillis="1000"
        android:initialLayout="@layout/desktopapp_layout"/>
        